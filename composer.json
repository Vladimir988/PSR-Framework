{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/Framework/",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S psr-framework.local:8080 -t public public/inedx.php",
    "test": "phpunit --colors=always"
  }
}